    <service>
        <provide interface="dk.sdu.mmmi.cbse.common.services.IEntityProcessingService"/>
    </service>

    <reference bind="setEnemyService" cardinality="0..1"
               interface="dk.sdu.mmmi.cbse.common.enemy.EnemySPI"
